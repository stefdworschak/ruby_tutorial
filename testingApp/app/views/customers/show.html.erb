<p id="notice"><%= notice %></p>
<p>
<strong>Forename:</strong>
<%= @customer.forename %>
</p>
<p>
<strong>Surname:</strong>
<%= @customer.surname %>
</p>
<p>
<strong>Email:</strong>
<%= @customer.email %>
</p>
<p>
<strong>Phone:</strong>
<%= @customer.phone %>
</p>
<!-- Display the orders of a customer -->
<h2>Orders</h2>
<% @customer.orders.each do |order| %>
<p>
<b>Product:</b>
<%= order.product %>
<b>Order details:</b>
<%= order.details %>
</p>
<% end %>
<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %> |
<%= link_to 'Show Orders', customer_orders_path(@customer) %>